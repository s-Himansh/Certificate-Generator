<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Participants List</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            transition: background-color 0.5s ease;
        }

        h1 {
            text-align: center;
            color: green;
            /* margin-top: -420px; */
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin-top: 100px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        body.dark-mode {
            background-color: #333;
            color: #fff;
        }

        th.dark-mode {
            background-color: #111;
        }

        tr.dark-mode:hover {
            background-color: #222;
        }
        tr:hover{
            background-color: #cafad5;
        }
        .toggle{
            margin-left: 1550px;
            margin-top: 30px;
        }
        button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 24px;
            color: #333;
        }

        button.dark-mode {
            color: #fff;
        }
        input[type="submit"] {
            background-color: #4caf50;
            color: #ffffff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            box-sizing: border-box;
            margin-top: 30px;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <button onclick="toggleDarkMode()" class="toggle">
        <span class="icon" id="toggleIcon">ðŸŒž</span> 
    </button>
    <!-- <h1>List</h1> -->
    <% if (message.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <% Object.keys(message[0]).forEach(key => { %>
                        <th><%= key %></th>
                    <% }) %>
                </tr>
            </thead>
            <tbody>
                <% message.forEach(participant => { %>
                    <tr>
                        <% Object.values(participant).forEach(value => { %>
                            <td><%= value %></td>
                        <% }) %>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No participants data available.</p>
    <% } %>

    <form action="/emailSent" method="post" enctype="multipart/form-data">
        <input type="hidden" name="allData" value="<%= JSON.stringify(message) %>">
        <input type="submit" value="Send certificates" >
    </form>

    <script>
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
            document.querySelectorAll('th, tr').forEach(element => {
                element.classList.toggle('dark-mode');
            });

            const toggleIcon = document.getElementById('toggleIcon');
            toggleIcon.innerHTML = document.body.classList.contains('dark-mode') ? 'ðŸŒ™' : 'ðŸŒž';
        }
    </script>
</body>
</html>
